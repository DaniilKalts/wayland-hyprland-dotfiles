{
  // ============================================================================
  // UI & APPEARANCE
  // ============================================================================
  "window.commandCenter": true,
  "workbench.colorTheme": "Dracula Theme (Classic)",

  // ============================================================================
  // EDITOR SETTINGS
  // ============================================================================
  "files.autoSave": "afterDelay",
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', 'monospace', 'Droid Sans Fallback', 'Noto Color Emoji'",

  // ============================================================================
  // VIM EXTENSION SETTINGS
  // ============================================================================
  "vim.useSystemClipboard": true,
  // Disable vim's Ctrl+H and Ctrl+L to allow Cursor keybindings to work
  "vim.handleKeys": {
    "<C-h>": false,
    "<C-l>": false
  },
  "vim.relativeNumbering": true,

  // ============================================================================
  // CURSOR AI SETTINGS
  // ============================================================================
  "cursor.cpp.disabledLanguages": [
    "plaintext"
  ],
  "geminicodeassist.inlineSuggestions.enableAuto": false,
  "workbench.activityBar.orientation": "vertical",
}