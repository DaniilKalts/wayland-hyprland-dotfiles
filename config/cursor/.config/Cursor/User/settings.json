{
  // ============================================================================
  // UI & APPEARANCE
  // ============================================================================
  "window.commandCenter": true,
  "workbench.colorTheme": "Dracula Theme (Classic)",

  // ============================================================================
  // EDITOR SETTINGS
  // ============================================================================
  "files.autoSave": "afterDelay",

  // ============================================================================
  // VIM EXTENSION SETTINGS
  // ============================================================================
  "vim.useSystemClipboard": true,
  // Disable vim's Ctrl+H and Ctrl+L to allow Cursor keybindings to work
  "vim.handleKeys": {
    "<C-h>": false,
    "<C-l>": false
  },

  // ============================================================================
  // CURSOR AI SETTINGS
  // ============================================================================
  "cursor.cpp.disabledLanguages": [
    "plaintext"
  ]
}
